{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All",
      "dependsOn": ["Start Backend", "Start Frontend"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "flask --app app run --host 0.0.0.0 --port 5100",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "isBackground": true,
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "Start Backend (with bug)",
      "type": "shell",
      "command": "WORKSHOP_INTENTIONAL_BUG=1 python -m flask run --app server.app --host 0.0.0.0 --port 5100",
      "isBackground": true,
      "group": { "kind": "build", "isDefault": false },
      "problemMatcher": []
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "cd client && npm run dev",
      "isBackground": true,
      "group": { "kind": "build", "isDefault": false },
      "problemMatcher": []
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "pytest server/test_app.py -q",
      "group": { "kind": "test", "isDefault": true },
      "problemMatcher": []
    }
  ]
}
